</head>

@*<body style="background-image: url('../img/mars-01.jpg');">*@
<body>

    <!-- PAGE CONTAINER -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="root" class="root front-container">

        <!-- CONTENTS -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <section id="content" class="content">
            <div class="content__boxed w-100 min-vh-100 d-flex flex-column align-items-center justify-content-center">
                <div class="content__wrap">

                    <!-- Login card -->
                    <div class="card shadow-lg">
                        <div class="card-body">

                            <div class="text-center">
                                <h1 class="h3">Account Login</h1>
                                <p>Sign In to your account</p>
                            </div>

                            <form asp-action="Login" class="mt-4" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Username" autofocus required />
                                    <div class="invalid-tooltip">Please input username</div>
                                </div>

                                <div class="mb-3">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                                    <div class="invalid-tooltip">Please input your password</div>
                                </div>

                                <div class="form-check">
                                    <input id="_dm-loginCheck" class="form-check-input" type="checkbox">
                                    <label for="_dm-loginCheck" class="form-check-label">
                                        Remember me
                                    </label>
                                </div>

                                <div class="d-grid mt-5">
                                    <button class="btn btn-primary btn-lg" type="submit">Sign In</button>
                                </div>
                            </form>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="@Url.Action("Recovery", "Account")" class="btn-link text-decoration-none">Forgot password ?</a>
                            </div>

                            @*<div class="d-flex align-items-center justify-content-between border-top pt-3 mt-3">
                            <h5 class="m-0">Login with</h5>

                            <!-- Social media buttons -->
                            <div class="ms-3">
                            <a href="#" class="btn btn-sm btn-icon btn-hover btn-primary text-inherit">
                            <i class="demo-psi-facebook fs-5"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-icon btn-hover btn-info text-inherit">
                            <i class="demo-psi-twitter fs-5"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-icon btn-hover btn-danger text-inherit">
                            <i class="demo-psi-google-plus fs-5"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-icon btn-hover btn-warning text-inherit">
                            <i class="demo-psi-instagram fs-5"></i>
                            </a>
                            </div>
                            <!-- END : Social media buttons -->

                            </div>*@

                        </div>
                    </div>
                    <!-- END : Login card -->

                </div>
            </div>
        </section>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- END - CONTENTS -->
    </div>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- END - PAGE CONTAINER -->
    <!-- MODAL TO SHOW ERRORS OR WARNINGS -->
    <partial name="_ModalDialog" />
    <!-- ================================================== -->
    <!-- JAVASCRIPTS -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Popper JS [ OPTIONAL ] -->
    <script src="~/vendors/popperjs/popper.min.js"></script>

    <!-- Bootstrap JS [ OPTIONAL ] -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Nifty JS [ OPTIONAL ] -->
    <script src="~/lib/nifty/nifty.min.js"></script>

    <!-- Nifty Settings [ DEMO ] -->
    <script src="~/js/demo/demo-purpose-only.min.js"></script>

    <script src="~/js/form-validation.js"></script>


    @if (TempData["ShowModal"].ToString() == "YES")
    {
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function (event) {
               var myModal = new bootstrap.Modal(document.getElementById('Modal_Dialog'))
                myModal.show()
            });
        </script>
    }

</body>

</html>
